{
  "name": "mern-electron-app",
  "version": "1.0.0",
  "author": "Joseph Adogeri",
  "description": "Electron app serves as template to build apps for full stack desktop using typescript",
  "homepage": ".",
  "main": "build/electron/main.js",
  "scripts": {
    "start": "electron .",
    "electron-dev": "concurrently \"npm run client-dev\" \"npm run server-dev\" \"electron .\"",
    "client-dev":" npm install && npm start --prefix client",
    "server-dev": "npm install && npm start --prefix server",
    "build": "electron-builder",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "tsc": "npm run build && tsc -p electron && tsc -p src && electron .",
    "electron:start": "react-scripts build && npm run electron",
    "postinstall": "electron-builder install-app-deps",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm run start\" \"wait-on http://127.0.0.1:3000 && tsc -p electron -w\" \"wait-on http://127.0.0.1:3000 && tsc -p electron && electron .\"",
    "electron:build": "npm run build && tsc -p electron && electron-builder"
  },
   "dependencies": {
    "@types/electron-devtools-installer": "^2.2.2",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.126",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "electron-devtools-installer": "^3.2.0",
    "electron-reload": "^1.5.0",
    "typescript": "^4.9.5"
  },
   "build": {
    "extends": null,
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
    "devDependencies": {
    "@types/file-saver": "^2.0.7",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^23.3.13",
    "electron-builder": "^23.6.0",
    "wait-on": "^7.0.1"
  }
}